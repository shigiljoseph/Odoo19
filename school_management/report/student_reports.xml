        <field name="report_file">school_management.event_information_report</field>
        <field name="binding_model_id" ref="school_management.model_student_registration"/>
        <field name="binding_type">report</field>
    </record>

    <!--    Club Information Template -->
    <record id="action_club_information_report" model="ir.actions.report">
        <field name="name">School Club Report</field>
        <field name="model">school.club</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">school_management.club_information_report</field>
        <field name="report_file">school_management.club_information_report</field>
        <field name="binding_model_id" ref="school_management.model_student_registration"/>
        <field name="binding_type">report</field>
    </record>
    


</odoo>