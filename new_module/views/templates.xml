<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="custom_shop" name="Custom Shop">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure">
                <div class="container">
                    <h1 class="mt-3"><t t-esc="page_title"/></h1>
                     <div class="row my-shop-widget">
                         <t t-foreach="products" t-as="product">
                             <div class="col-md-3 mb-4" t-key="product.id">
                                 <div class="card product-card" t-att-data-product-id="product.id">
                                     <img t-att-src="'/web/image/product.product/%s/image_256'%product.id" class="card-img-top" t-att-alt="product.name"/>
                                      <div class="card-body">
                                           <h5 class="card-title" t-esc="product.name"/>
                                           <p class="card-text">
                                                <span class="price" t-esc="product.list_price"/>
                                           </p>
                                           <button class="btn btn-primary btn-add-cart">Add to Cart </button>
                                      </div>
                                 </div>
                             </div>
                         </t>
                     </div>
                </div>
            </div>
        </t>
    </template>
</odoo>