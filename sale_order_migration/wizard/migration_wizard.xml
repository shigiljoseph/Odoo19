<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="sale_order_migration_wizard_form_view" model="ir.ui.view">
        <field name="name">Migration Wizard</field>
        <field name="model">sale.order.migration</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <h4>DB 18</h4><br/>
                            <field name="url18"/>
                            <field name="user18"/>
                            <field name="password18" password="True"/>
                            <field name="db18"/>
                        </group>
                        <group>
                            <h4>DB 19</h4><br/>
                            <field name="url19"/>
                            <field name="user19"/>
                            <field name="password19" password="True"/>
                            <field name="db19"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_migrate" type="object" string="Migrate" class="btn-primary"/>
                    <button string="Discard" special="cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="migration_wizard_action" model="ir.actions.act_window">
        <field name="name">Migrate 18 to 19</field>
        <field name="res_model">sale.order.migration</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sale_order_migration_wizard_form_view"/>
        <field name="target">new</field>
    </record>

</odoo>